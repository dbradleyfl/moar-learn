<div class="col-md-6 col-md-offset-3 margin-top-50">
	<h1 class="text-center logo"><a href="/">Moar Learn!</a></h1>	
	<h3 class="text-center logo">About <%= @query.capitalize %></h3>
	<br>
	<% @query_results.each do |product| %>
		<a class="text-center text-muted" href="<%= product[:url] %>" target="_blank"><h3><%= product[:title] %></h3><h4>By <%= product[:author]%></h4></a>
		<button class="btn btn-success center-block" href="<%= product[:url] %>">Buy on Amazon</button>
		<br>
	<% end %>
</div>

<div class="top-button">
  <a class="btn btn-success" href="/">Start Over</a>
</div>