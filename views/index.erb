<div class="row big-top-margin">
  <div class="col-xs-12">
    <h1 class="text-center logo"><a href="/">Moar Learn!</a></h1>
    <h5 class="text-center logo">Book Recommendation Engine</h5>
  </div>
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/similar_topics" method="get">
      <input type="text" name="query" class="form-control text-center margin-top-30" placeholder="Enter a topic or URL " required></input>
        <button type="submit" class="btn btn-success center-block margin-top-30">Search</button>
    </form>
  </div>
</div>

