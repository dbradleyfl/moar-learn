<div class="col-md-8 col-md-offset-2 margin-top-50">
	<h1 class="text-center logo">Moar Learn!</h1>
	<h3 class="text-center logo">Topics Similar To "<%= @query.capitalize %>"</h3>
	<div class="margin-top-30">
		<% @similar_topics.each_with_index do |topic, index| %>

			<a class="text-center text-muted" href="/search/<%= topic.downcase %>"><h3><%= (index+1).to_s + ". " + topic.capitalize %></h3></a>
			<br>

		<% end %>
	</div>
</div>

<div class="top-button">
  <a class="btn btn-success" href="/">Start Over</a>
</div>